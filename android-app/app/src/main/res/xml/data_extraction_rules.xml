<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow backup of user preferences -->
        <include domain="sharedpref" path="."/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow transfer of app data during device migration -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
    </device-transfer>
</data-extraction-rules>